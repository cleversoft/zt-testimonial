<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="2.5.0" client="site" method="upgrade">
    <name>ZT Testimonial</name>
    <author>Duc NA</author>
    <version>2.1.1</version>
    <creationDate>17/03/2013</creationDate>
    <description>
        ZT Testimonial
    </description>
    <files>
        <filename>mod_zt_testimonial.xml</filename>
        <filename module="mod_zt_testimonial">mod_zt_testimonial.php</filename>
        <filename >helper.php</filename>
        <filename >index.html</filename>
        <folder>admin</folder>
        <folder>asset</folder>
        <folder>language</folder>
        <folder>tmpl</folder>
    </files>
    <languages>
        <language tag="en-GB">language/en-GB.mod_zt_testimonial.ini</language>
    </languages>
    <config>
        <fields name="params" addfieldpath="modules/mod_zt_testimonial/admin/element/">
            <fieldset name="basic">
                <field name="asset" type="asset" path="modules/mod_zt_testimonial/admin/asset/"></field>
                <field type="load" name="loadTestimonial" path="modules/mod_zt_testimonial/admin/asset/"></field>
                <field name="arrayTestimonial" type="hidden" default="" />

            </fieldset>
            <fieldset name="MOD_ZT_TESTIMONIAL_SETTING">
                <field name="name" type="list" default="1" class="" label="MOD_ZT_NAME" description="MOD_ZT_NAME_DESC">
                    <option value="1">Show</option>
                    <option value="0">Hide</option>
                </field>
                <field name="email" type="list" default="1" class="" label="MOD_ZT_EMAIL" description="MOD_ZT_EMAIL_DESC">
                    <option value="1">Show</option>
                    <option value="0">Hide</option>
                </field>
                <field name="avatar" type="list" default="1" class="" label="MOD_ZT_AVATAR" description="MOD_ZT_AVATAR_DESC">
                    <option value="1">Show</option>
                    <option value="0">Hide</option>
                </field>
                <field name="position" type="list" default="1" class="" label="MOD_ZT_POSITION" description="MOD_ZT_POSITION_DESC">
                    <option value="1">Show</option>
                    <option value="0">Hide</option>
                </field>

                <field name="website" type="list" default="1" class="" label="MOD_ZT_WEBSITE" description="MOD_ZT_WEBSITE_DESC">
                    <option value="1">Show</option>
                    <option value="0">Hide</option>
                </field>
                <field name="facebook" type="list" default="1" class="" label="MOD_ZT_FACEBOOK" description="MOD_ZT_FACEBOOK_DESC">
                    <option value="1">Show</option>
                    <option value="0">Hide</option>
                </field>
                <field name="twitter" type="list" default="1" class="" label="MOD_ZT_TWITTER" description="MOD_ZT_TWITTER_DESC">
                    <option value="1">Show</option>
                    <option value="0">Hide</option>
                </field>



                <field name="linkedin" type="list" default="1" class="" label="MOD_ZT_LINKEDIN" description="MOD_ZT_LINKEDIN_DESC">
                    <option value="1">Show</option>
                    <option value="0">Hide</option>
                </field>
                <field name="google" type="list" default="1" class="" label="MOD_ZT_GOOGLE" description="MOD_ZT_GOOGLE_DESC">
                    <option value="1">Show</option>
                    <option value="0">Hide</option>
                </field>
                <field name="printerest" type="list" default="1" class="" label="MOD_ZT_PRINTEREST" description="MOD_ZT_PRINTEREST_DESC">
                    <option value="1">Show</option>
                    <option value="0">Hide</option>
                </field>

                <field name="styleTestimonial" type="list" default="1" class="" label="MOD_ZT_STYLE" description="MOD_ZT_STYLE_DESC">
                    <option value="default">Default</option>
                    <option value="aboutUs">About Us</option>
                </field>

                <field name="descriptionAboutUs" type="textarea" default="Description About Us" label="Enter Description" description="Enter some text for description" rows="10" cols="5" />

                <field name="item" type="text" default="3" class="" label="MOD_ZT_ITEM" description="MOD_ZT_ITEM_DESC"></field>
                <field name="pause" type="text" default="4000" class="" label="MOD_ZT_PAUSE" description="MOD_ZT_PAUSE_DESC">
                </field>

                <field name="autoHover" type="list" default="1" class="" label="MOD_ZT_AUTO_HOVER" description="MOD_ZT_AUTO_HOVER_DESC">
                    <option value="true">Yes</option>
                    <option value="false">No</option>
                </field>

                <field name="arrow" type="list" default="1" class="" label="MOD_ZT_ARROW" description="MOD_ZT_ARROW_DESC">
                    <option value="1">Show</option>
                    <option value="0">Hide</option>
                </field>

                <field name="indicators" type="list" default="1" class="" label="MOD_ZT_INDICATORS" description="MOD_ZT_INDICATORS_DESC">
                    <option value="1">Show</option>
                    <option value="0">Hide</option>
                </field>


            </fieldset>



        </fields>
    </config>

</extension>
